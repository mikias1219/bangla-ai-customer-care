# Bangla AI Platform - Environment Configuration
# Copy this file to .env and configure for your environment

# Database (SQLite by default for simple VPS deploy)
BANG_DATABASE_URL=sqlite:///./bangla.db

# Redis (optional; leave empty to disable Redis-backed features)
BANG_REDIS_URL=

# JWT Authentication
BANG_SECRET_KEY=change_this_to_a_random_secret_key_in_production
BANG_ALGORITHM=HS256
BANG_ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS Origins (JSON array)
# For production, set to your domain, e.g., ["https://yourdomain.com"]
BANG_CORS_ORIGINS=["http://localhost:5173"]

# AI Models
BANG_NLU_MODEL_NAME=sagorsarker/bangla-bert-base
BANG_WHISPER_MODEL_SIZE=base
BANG_TTS_PROVIDER=openai  # Options: openai, google, azure, coqui
BANG_OPENAI_TTS_VOICE=alloy  # Options: alloy, echo, fable, onyx, nova, shimmer
BANG_OPENAI_TTS_MODEL=tts-1  # Options: tts-1, tts-1-hd

# OpenAI API (Required for advanced AI features)
BANG_OPENAI_API_KEY=your-openai-api-key-here
BANG_OPENAI_MODEL=gpt-4
BANG_OPENAI_MAX_TOKENS=1000

# Social Media Integrations

# Facebook Messenger
BANG_FACEBOOK_APP_ID=your-facebook-app-id
BANG_FACEBOOK_APP_SECRET=your-facebook-app-secret
BANG_FACEBOOK_PAGE_ACCESS_TOKEN=your-facebook-page-access-token
BANG_FACEBOOK_VERIFY_TOKEN=your-random-verify-token

# Instagram Business
BANG_INSTAGRAM_BUSINESS_ID=your-instagram-business-id
BANG_INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# WhatsApp Business API
BANG_WHATSAPP_BUSINESS_ID=your-whatsapp-business-id
BANG_WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
BANG_WHATSAPP_VERIFY_TOKEN=your-whatsapp-verify-token
BANG_WHATSAPP_PHONE_NUMBER_ID=your-whatsapp-phone-number-id

# Legacy WhatsApp (for backward compatibility)
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=

# Legacy Meta (for backward compatibility)
META_VERIFY_TOKEN=replace-with-random-verify-token
META_APP_SECRET=
MESSENGER_PAGE_ID=
MESSENGER_PAGE_ACCESS_TOKEN=
INSTAGRAM_BUSINESS_ID=
INSTAGRAM_ACCESS_TOKEN=

# Other API Keys (Optional)
BANG_GOOGLE_CLOUD_API_KEY=
BANG_AZURE_SPEECH_KEY=

# Twilio (for voice IVR)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

